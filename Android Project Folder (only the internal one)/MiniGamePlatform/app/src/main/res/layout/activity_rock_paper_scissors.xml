<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDE0EF"
    tools:context=".RockPaperScissor">

    <Button
        android:id="@+id/btnScissor"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="109dp"
        android:layout_height="135dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/scissors"
        android:onClick="btnOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRock"
        app:layout_constraintVertical_bias="0.525" />

    <Button
        android:id="@+id/btnRock"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/rock"
        android:onClick="btnOnClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tagWinLose" />

    <Button
        android:id="@+id/btnPaper"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/paper"
        android:onClick="btnOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRock"
        app:layout_constraintVertical_bias="0.536" />

    <TextView
        android:id="@+id/tagWinLose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Win/Lose"
        android:textSize="90sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>